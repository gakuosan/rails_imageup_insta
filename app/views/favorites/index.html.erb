<h1>お気に入り</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>投稿者</th>
      <th>画像</th>
      <th>投稿内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.picture.title %></td>
        <td><%= favorite.picture.user.name %></td>
        <td><%= image_tag favorite.picture.image,size:'160x160' %></td>
        <td><%= favorite.picture.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>