<p id="notice"><%= notice %></p>

<h1>投稿画像一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>投稿者</th>
      <th>画像</th>
      <th>投稿内容</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>s
      <tr>
        <td><%= picture.title %></td>
        <td><%= picture.user.name %></td>
        <td><%= image_tag picture.image.url,size:'200x200' %></td>
        <td><%= picture.content %></td>
        <td><%= link_to 'Show', picture %></td>
          <% if current_user.id == picture.user.id %>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
   <% end %>